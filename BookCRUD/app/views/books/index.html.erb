<% if user_signed_in? %>
<h1>Books List</h1>
<table>
    <tr>
    <th>Book Title</th>
    <th>Author_Name</th>
    <th>Description</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
        <td><%= link_to book.title, book %> </td>
        <td><%= book.author_name %></td>
        <td><%= book.description %> </td>
    </tr>
      <% end %>
</table>
<div class="pag-bar mt-5 pt-5 d-flex justify-content-center">
  <%== pagy_bootstrap_nav(@pagy) %>
</div>
<p><%= link_to "New Book", new_book_path %></p>
<% end %>
